<html>

<head>
    <link rel="stylesheet" href="styles/index.css">
</head>


<body>
    <div class="fullbg" style="background: black;">
        <div class="signup_portal" style="background: black;">
            <div class="form-container">
                <!-- Contact Form -->
                <form method="post" action="/auth/signup">
                    <div class="form-group">
                        <label class="form-label1" for="firstName"></label>
                        <input class="form-input1" type="text" id="firstName" name="firstName" value=""
                            placeholder="First Name" />
                    </div>
                    <div class="form-group">
                        <label class="form-label2" for="lastName"></label>
                        <input class="form-input2" type="text" id="lastName" name="lastName" value=""
                            placeholder="Last Name" />
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="username"></label>
                        <input class="form-input3" type="text" id="username" name="username" value=""
                            placeholder="Username" />
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="email"></label>
                        <input class="form-input4" type="email" id="emailId" name="emailId" value=""
                            placeholder="Email Address" />
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="mobileNumber"></label>
                        <input class="form-input5" type="tel" id="mobileNumber" name="mobileNumber" value=""
                            placeholder="Phone Number" />
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="password"></label>
                        <input class="form-input6" type="text" id="password" name="password" value=""
                            placeholder="password:" />
                    </div>
                    <button type="submit" class="form-button">
                        <p>Sign Up</p>
                    </button>
                </form>
            </div>
            <div class="Sign-up">
                <h2>Sign-Up</h2>
            </div>
            <div class="sign-img">
                <img src="images/s1.png" class="s1" alt="" />
            </div>
        </div>
        <div class="imageofsign">
            <!-- <img class="s2" src="s2.png" alt="" /> -->
        </div>
    </div>
</body>

</html>